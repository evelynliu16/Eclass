<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quesPopUpDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/quesPopUpHw"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="150dp"
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:autofillHints=""
                android:background="@drawable/ques_answerbox_background"
                tools:ignore="LabelFor" />


            <Button
                android:id="@+id/quesPopUpSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/homework_save"
                android:layout_margin="15dp"
                android:background="@drawable/ques_button"
                android:layout_gravity="center|bottom"/>

            <Button
                android:id="@+id/quesPopUpClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/homework_close"
                android:background="@drawable/ques_button"
                android:layout_gravity="center|bottom"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>